<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - 5eNotes</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
   @* 
    <link rel="stylesheet" href="~/_5eNotes.styles.css" asp-append-version="true" />*@
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-dark border-bottom border-secondary box-shadow">
            <div class="container">
                <a class="navbar-brand text-gold" asp-area="" asp-page="/Index"><h3>5eNotes</h3></a>
                <button class="navbar-toggler bg-secondary" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
        </nav>
    </header>

    <div id="contentContainer">
        <main role="main" class="pb-3">
            <div class="d-flex flex-row">
                <aside id="sidebar" class="navbar-collapse collapse d-sm-inline-flex bg-dark">
                    <table class="navbar-nav flex-grow-1 table table-hover ">
                        <tr class="nav-item mx-auto row mt-1">
                            <th  asp-area="" asp-page="/Index" class="text-center text-white btn border border-secondary mx-auto col-11">
                                <a class="d-block text-decoration-none text-white d-block" href="~/Index">Character Select</a>
                            </th>
                        </tr>
                        <tr class="nav-item mx-auto row mt-1">
                            <th asp-area="" asp-page="/Profile" class="text-center text-white btn border border-secondary mx-auto col-11">
                                <a class="d-block text-decoration-none text-white" href="~/Profile">Profile</a>    
                            </th>
                        </tr>
                        <tr class="nav-item mx-auto row mt-1">
                            <th class="text-center text-white btn border border-secondary mx-auto col-11">
                                <a class="text-white text-decoration-none d-block" href="~/Inventory">Inventory</a>
                            </th>
                        </tr>
                        <tr class="nav-item mx-auto row mt-1">
                            <th class="text-center text-white btn border border-secondary mx-auto col-11">
                                <a class="d-block text-decoration-none text-white" href="~/Combat_Planner">Combat Planner</a>
                            </th>
                        </tr>
                        <tr class="nav-item mx-auto row mt-1">
                            <th class="text-center text-white btn border border-secondary mx-auto col-11">
                                <a class="d-block text-decoration-none text-white" href="~/Equipment">Equipment</a>
                            </th>
                        </tr>
                        <tr class="nav-item mx-auto row mt-1">
                            <th class="text-center text-white btn border border-secondary mx-auto col-11">
                                <a class="d-block text-decoration-none text-white" href="~/Spells">Spells</a>
                            </th>
                        </tr>
                        <tr class="nav-item mx-auto row mt-1">
                            <th class="text-center text-white btn border border-secondary mx-auto col-11">
                                <a class="d-block text-decoration-none text-white" href="~/Notes">Notes</a>
                            </th>
                        </tr>
                        <tr class="nav-item mx-auto row mt-1">
                            <th class="text-center text-white btn border border-secondary mx-auto col-11">
                                <a class="d-block text-decoration-none text-white" href="~/Dice_Roll">Dice Roll</a>
                            </th>
                        </tr>
                    </table>
                </aside> 
                <div class="flex-grow-1 container">
                    <div id="pageContent" class="row align-items-center">
                    <div id="errorHandleElement" ></div>
                        @RenderBody()
                    </div>
                </div>
            </div>
        </main>
    </div>

    <footer class="border-top border-secondary footer text-muted bg-dark pb-5">
       <div class="text-white w-25 mx-5">&copy; 2022 - 5eNotes - <a asp-area="" asp-page="/Privacy">Privacy</a></div> 
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/site.min.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
    <script src="https://cdn.jsdelivr.net/npm/vue@2.6.14/dist/vue.js"></script>

</body>
</html>